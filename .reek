IrresponsibleModule:
  enabled: false

exclude_paths:
 - 'db'

UncommunicativeModuleName:
  accept:
    - V1

TooManyInstanceVariables:
  max_instance_variables: 10

TooManyStatements:
  enabled: true
  exclude:
  - initialize
  max_statements: 8

RepeatedConditional:
  max_ifs: 3

Attribute:
  enabled: false
  exclude: []
  ignore: :getter | :setter

UtilityFunction:
  public_methods_only: true
